{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}


{% block body %}
            <div class="container-xxl flex-grow-1 container-p-y">
              <div class="d-flex justify-content-between align-items-center">
                    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Dashboard /</span> Messages</h4>
                </div>
              {% include 'partials/flash.html.twig' %}
              <div class="card">
              
                <div class="table-responsive text-nowrap">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Received At</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                    {% for msg in messages %}
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{msg.senderFname}}</strong></td>
                        <td>{{msg.senderLname}}</td>
                        <td>{{msg.senderEmail}}</td>
                        <td>
                          {{msg.createdAt |date()}}
                        </td>
                        <td class="d-flex">
                            <a class="btn" href="{{path('app.message.show', {message:msg.id})}}"><i class="bx bx-show-alt me-1 text-success"></i> </a>
                            <a class="btn" id="delete-msg"  href="{{path('app.message.delete', {message:msg.id})}}"><i class="bx bx-trash me-1 text-danger"></i> </a>
                        </td>
                      </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
{% endblock %}
