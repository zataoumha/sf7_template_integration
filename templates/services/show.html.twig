{% extends 'base.html.twig' %}

{% block title %} Service details {% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Dashboard / services / </span> details</h4>
        <a href="{{path('app.services.index')}}" class="btn btn-info"><i class="bx bx-arrow-back me-1"></i></a>
    </div>

    <h1 class="text-center py-3">{{service.title}}</h1>
    <div class="d-flex ">
        <img class="px-5" src="{{asset('services_images/')}}{{service.image}}" alt="">
        
        <div class="row">
            <p>
            {{service.description}}
            </p>
            
            
        </div>
        
    </div>
    <p class="px-5" >
        Created At : {{service.createdAt |date}}
        {% if service.updatedAt %}
        Updated At : {{service.UpdatedAt |date}}
        {% endif %}
    </p>
</div>

{% endblock %}